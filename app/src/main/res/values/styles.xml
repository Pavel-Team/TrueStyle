<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Стиль для TextView заголовка приложения-->
    <style name="titleAppTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/playball_regular</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!--Стиль для TextView цитаты-->
    <style name="quoteTextViewStile" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_italic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>

    <!--Стиль для TextView автора цитаты-->
    <style name="authorQuoteTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Стиль для TextView заголовков-->
    <style name="titleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Стиль для очень жирного текста-->
    <style name="boldTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!--Стиль для TextView обычного текста-->
    <style name="textTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="textTextViewStyle.additionalText">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/light_gray_2</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--Стиль для TextView ссылок-->
    <style name="linkTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_blue</item>
        <item name="fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Стиль для TextView строки в характеристиках одежды-->
    <style name="textTextViewStyle.charactersTextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <!--Стиль для LinearLayout в характеристиках одежды-->
    <style name="rowCharactersLinearLayout">
        <item name="android:layout_marginStart">@dimen/margin_start_end_row_characters</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_end_row_characters</item>
        <item name="android:paddingTop">@dimen/margin_top_row_characters</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_row_characters</item>
        <item name="android:background">@drawable/bottom_gray_line</item>
    </style>

    <style name="textTextViewStyle.charactersTextView.settingTextView">
        <item name="android:layout_marginStart">@dimen/margin_start_end_row_characters</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_end_row_characters</item>
        <item name="android:paddingTop">@dimen/margin_top_row_characters</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_row_characters</item>
        <item name="android:background">@drawable/bottom_gray_line</item>
    </style>

    <!-- РОДИТЕЛЬСКИЙ стиль для кнопок -->
    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:minHeight">@dimen/min_height_button</item>
        <item name="android:paddingStart">@dimen/padding_start_end_button</item>
        <item name="android:paddingEnd">@dimen/padding_start_end_button</item>
        <item name="android:paddingTop">@dimen/padding_top_button</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_button</item>
    </style>

    <!--Стиль для голубых кнопок -->
    <style name="buttonStyle.LightBlue">
        <item name="android:background">@drawable/light_blue_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Стиль для белых кнопок в серой рамке -->
    <style name="buttonStyle.white">
        <item name="android:background">@drawable/white_button</item>
        <item name="android:textColor">@color/strong_gray</item>
    </style>

    <!--Стиль для SearchView-->
    <style name="searchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@drawable/background_layout_characteristics</item>
    </style>

    <!--Стиль для EditText-->
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_layout_characteristics</item>
        <item name="android:textColorHint">@color/light_gray_2</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">@dimen/padding_edit_text</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <!--Стиль для диалоговых окон-->
    <style name="dialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowMinWidthMajor">84%</item>
        <item name="android:windowMinWidthMinor">84%</item>
        <item name="windowFixedHeightMajor">84%</item>
        <item name="windowFixedHeightMinor">84%</item>
    </style>

</resources>