<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Тема загрузочного экрана-->
    <style name="Theme.SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.TrueStyle</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- Базовая тема приложения -->
    <style name="Theme.TrueStyle" parent="Theme.AppCompat.DayNight">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item> <!--Панель приложения-->
        <item name="colorPrimaryVariant">@color/white</item> <!--Строка состояния-->
        <item name="colorOnPrimary">@color/gray</item> <!--Для EditText и др.-->
        <item name="android:windowBackground">@color/white</item> <!--Фон приложения-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textColorHint">@color/light_black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>