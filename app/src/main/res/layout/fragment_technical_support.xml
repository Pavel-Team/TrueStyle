<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:id="@+id/image_button_back"
            android:layout_width="@dimen/width_ic_back"
            android:layout_height="@dimen/width_ic_back"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/margin_window"
            android:layout_marginStart="@dimen/margin_ic_back"
            android:scaleType="centerCrop"
            android:background="@null"
            android:contentDescription="@string/back" />

        <TextView
            android:id="@+id/title_style"
            style="@style/titleAppTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/technical_support"
            app:layout_constraintStart_toEndOf="@id/image_button_back"
            app:layout_constraintTop_toTopOf="@id/image_button_back"
            app:layout_constraintBottom_toBottomOf="@id/image_button_back"
            android:layout_marginStart="@dimen/margin_start_title_style" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <TextView
                style="@style/titleTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textSize="24sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/view_email_tech_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_top_layout_technical_support">

                <ImageView
                    android:layout_width="@dimen/width_icon_technical_support"
                    android:layout_height="@dimen/width_icon_technical_support"
                    android:src="@drawable/ic_email"/>

                <TextView
                    style="@style/textTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_info_technical_support"
                    android:text="@string/email_technical_support"
                    android:textSize="@dimen/text_size_info_technical_support"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_vk_tech_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_top_layout_technical_support">

                <ImageView
                    android:layout_width="@dimen/width_icon_technical_support"
                    android:layout_height="@dimen/width_icon_technical_support"
                    android:src="@drawable/vk"/>

                <TextView
                    style="@style/textTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_info_technical_support"
                    android:text="@string/vk_technical_support"
                    android:textSize="@dimen/text_size_info_technical_support"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_tg_tech_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_top_layout_technical_support">

                <ImageView
                    android:layout_width="@dimen/width_icon_technical_support"
                    android:layout_height="@dimen/width_icon_technical_support"
                    android:src="@drawable/ic_tg"/>

                <TextView
                    style="@style/textTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_start_info_technical_support"
                    android:text="@string/tg_technical_support"
                    android:textSize="@dimen/text_size_info_technical_support"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>